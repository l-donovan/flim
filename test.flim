item #some_item {
	host "0.0.0.0"
}

#default_creds {
	username "testuser"
	auth_method "key"
}

inventory {
	use_root true
	items [
		item {
			host "100.100.100.100"
		}
		item {
			host "100.100.100.101"
			timeout 60
		}
		item {
			name "A"
			host from "hostname"
			port from "base_port"
		}
		item {
			name "B"
			host from "hostname"
			port add [from "base_port" 1]
		}
		item {
			name "C"
			host from "hostname"
			port add [from "base_port" 2]
		}
		&some_item
	]
	credentials {
		*&default_creds
		username "realuser"
	}
}

